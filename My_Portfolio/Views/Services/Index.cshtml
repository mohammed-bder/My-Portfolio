@model List<Services>
@{
    ViewData["Title"] = "Services";
}

<div class="fixed-navigation">
    <a class="navigation-button add-button" asp-controller="Services" asp-action="Add">Add</a>
    <a class="navigation-button edit-button" asp-controller="Services" asp-action="Search">Edit</a>
    <a class="navigation-button delete-button" asp-controller="Services" asp-action="ViewOfRemove">Delete</a>
</div>

<section class="cards" id="Services">
    <h2 class="title">Services</h2>

    <div class="content">
        @foreach (var card in Model)
        {
            <div class="card">
                <div class="icon">
                    <i class="@card.Icon"></i>
                </div>
                <div class="info">
                    <h3>@card.Title</h3>
                    <p>@card.Description</p>
                </div>
            </div>
        }
    </div>
</section>

<style>
    .fixed-navigation {
        position: fixed;
        top: 35%;
        left: 10px;
        display: flex;
        flex-direction: column;
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 5px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        z-index: 1000;
    }

    .navigation-button {
        display: block;
        margin: 10px 0;
        padding: 12px 20px;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 150px;
        transition: background-color 0.3s, transform 0.2s;
        text-align: center;
        text-decoration: none;
        z-index:999;
    }

    .add-button {
        background-color: #28a745;
    }

    .edit-button {
        background-color: #ffc107;
    }

    .delete-button {
        background-color: #dc3545;
    }

    .add-button:hover {
        background-color: #218838;
        transform: translateY(-2px);
    }

    .edit-button:hover {
        background-color: #e0a800;
        transform: translateY(-2px);
    }

    .delete-button:hover {
        background-color: #c82333;
        transform: translateY(-2px);
    }
</style>
