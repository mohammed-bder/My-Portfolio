@{
    ViewData["Title"] = "MyResume";
}

<section class="cards">
    <h2 class="title">My Resume</h2>
    <div class="container mt-4">
        <div class="row">
            <!-- PDF Embed Section -->
            <div class="col-12">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe src="~/MyResume/MyResume.pdf" class="embed-responsive-item" style="width:100%; height:600px;" allowfullscreen></iframe>
                </div>
            </div>
            <!-- Download Button -->
            <div class="col-12 text-center mt-4">
                <a href="your-resume.pdf" download class="btn btn-primary">Download Resume</a>
            </div>
        </div>
    </div>
</section>
